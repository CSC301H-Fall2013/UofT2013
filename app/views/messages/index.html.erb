<h1>Listing messages</h1>


  <table class="table">
  <tr>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @mymessages.each do |message| %>
  <tr>
    <td><%= message.sender %></td>
    <td><%= message.researcher_id %></td>
    <td><%= message.message %></td>
    <td><%= link_to 'Show', message %></td>
    <% if message.sender != current_user.id %>    
        <td><%= link_to 'Reply', reply_message_path(message, :target_user_id => message.sender) %></td>
    <% else %>
        <td><%= link_to 'Edit', edit_message_path(message, :target_user_id => message.researcher_id) %></td> 
    <% end %>
    
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


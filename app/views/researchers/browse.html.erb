<header>
  <h1></h1>
</header>
<div class="container">
  <table class="table">
    <thead>
    <th>id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile Phone</th>
    <th>Join Date</th>
    <th>Expertise</th>
    <th>Send a Message</th>
    <th></th>
    </thead>
    <!-- Username Point -->
    <% @researchers.each do |r| %>
      <tr class="approved" id="q1">
        <td><%= r.id %></td>
        <td><%= r.getName() %></td>
        <td><%= r.getEmail() %></td>
        <td><%= r.getPhone() %></td>
        <td><%= r.created_at.strftime('%c') %></td>
        <td><%= r.expertise %></td>
        <td> <%= link_to "Contact User", root_url + "messages/new"  %></th>
        <% if current_user.inCollaborators(r) %>
            <td><%= link_to 'Uncollaborate', uncollaborate_researcher_path(r, :current_user_id => current_user.id) %></td>
        <% else %>
            <td><%= link_to 'Collaborate', collaborate_researcher_path(r, :current_user_id => current_user.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>

  <header>
    <h2>CollabList for Testing</h2>
  </header>
  <table class="table">
    <thead>
    <th>table id</th>
    <th>your id</th>
    <th>collab_id</th>
    <th>Confrimed</th>
    </thead>
    <% @collaborators.each do |c| %>
        <tr class="swag?" id="swag">
            <td><% c.id %></td>
            <td><% c.researcher_id %></td>
            <td><% c.collab_id %></td>
            <td><% c.confirmed %></td>
        </tr>
    <% end %>
</table>
</div><!--container-->
